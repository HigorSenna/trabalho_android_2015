<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.br.receitamedicaapp.activity.VisualizarReceitaActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Numero"
        android:id="@+id/txtNumeroReceitaVisualizar"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/txtDataReceitaVisualizar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data"
        android:id="@+id/txtDataReceitaVisualizar"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtNumeroReceitaVisualizar"
        android:layout_alignStart="@+id/txtStatusReceitaVisualizar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status"
        android:id="@+id/txtStatusReceitaVisualizar"
        android:layout_marginTop="51dp"
        android:layout_marginStart="110dp"
        android:layout_below="@+id/txtDataReceitaVisualizar"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar Receita"
        android:id="@+id/botaoCancelarReceita"
        android:layout_alignTop="@+id/botaoVoltarVisualizarReceita"
        android:layout_toEndOf="@+id/txtDataReceitaVisualizar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voltar"
        android:id="@+id/botaoVoltarVisualizarReceita"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/txtDataReceitaVisualizar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Numero:"
        android:id="@+id/textView12"
        android:layout_marginTop="11dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Data:"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/txtDataReceitaVisualizar"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Status:"
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/txtStatusReceitaVisualizar"
        android:layout_alignParentStart="true" />

</RelativeLayout>
