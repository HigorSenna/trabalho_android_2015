<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/imageView"
            android:background="@drawable/next"
            android:layout_marginTop="13dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nome Receita"
            android:textColor="#000000"
            android:id="@+id/txtNomeReceitaView"
            android:layout_below="@+id/txtNumeroReceitaView"
            android:layout_alignStart="@+id/txtNumeroReceitaView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="NumeroReceita"
            android:textColor="#000000"
            android:id="@+id/txtNumeroReceitaView"
            android:layout_marginLeft="23dp"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</LinearLayout>